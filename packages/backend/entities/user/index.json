{
  "module": "user",
  "route": true,
  "unicon": "user-circle",
  "presets": [
    "crud",
    "view"
  ],
  "individualActions": {
    "spawnEdit": {
      "name": "Editar",
      "unicon": "edit",
      "useronly": true
    },
    "spawnChangePwd": {
      "name": "Mudar senha",
      "unicon": "key-skeleton",
      "useronly": true
    },
    "remove": {
      "name": "remover",
      "unicon": "trash-alt",
      "useronly": true,
      "ask": true
    }
  },
  "fields": {
    "name": {
      "label": "Nome",
      "type": "text",
      "required": true
    },
    "active": {
      "label": "Ativo",
      "type": "boolean",
      "default": true
    },
    "first_name": {
      "label": "Nome",
      "type": "text",
      "notable": true,
      "noform": true
    },
    "access": {
      "label": "Preset de acesso",
      "type": "select",
      "values": {
        "__query": {
          "module": "accessProfile",
          "index": "name"
        }
      },
      "required": true
    },
    "email": {
      "label": "Email",
      "type": "text",
      "unique": true,
      "required": true
    },
    "password": {
      "label": "Senha",
      "type": "password",
      "hidden": true,
      "noform": true,
      "notable": true
    },
    "phone": {
      "label": "Telefone",
      "type": "text",
      "mask": "(##) #####-####"
    },
    "picture": {
      "module": "file",
      "label": "Foto de perfil",
      "index": "filename",
      "cellStyle": "(row) => '_id' in row.picture && `border rounded-full overflow-hidden`"
    },
    "group": {
      "label": "Grupo",
      "type": "text",
      "noform": true,
      "notable": true
    },
    "updated_at": {
      "label": "Atualizado em",
      "type": "datetime",
      "meta": true
    }
  }
}

