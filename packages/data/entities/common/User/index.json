{
  "module": "user",
  "route": true,
  "actions": {
    "spawnAdd": {
      "name": "Adicionar"
    }
  },
  "individualActions": {
    "spawnEdit": {
      "name": "Editar"
    },
    "spawnChangePwd": {
      "name": "Mudar senha"
    },
    "remove": {
      "name": "Remover",
      "ask": true
    }
  },
  "fields": {
    "name": {
      "label": "Nome",
      "type": "text",
      "required": true
    },
    "access": {
      "label": "Preset de acesso",
      "type": "select",
      "values": {
        "__query": {
          "module": "accessProfile",
          "index": "name"
        }
      },
      "required": true
    },
    "email": {
      "label": "Email",
      "type": "text",
      "required": true
    },
    "password": {
      "label": "Senha",
      "type": "password",
      "required": true,
      "hidden": true,
      "noform": true,
      "notable": true
    },
    "active": {
      "label": "Ativo",
      "type": "boolean",
      "default": true
    },
    "phone": {
      "label": "Telefone",
      "type": "text",
      "mask": "(##) #####-####"
    },
    "picture": {
      "module": "file",
      "label": "Foto de perfil",
      "index": "filename"
    },
    "group": {
      "label": "Grupo",
      "type": "text",
      "noform": true,
      "notable": true
    },
    "updated_at": {
      "label": "Atualizado em",
      "type": "datetime",
      "meta": true
    }
  }
}

