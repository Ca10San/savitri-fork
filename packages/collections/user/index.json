{
  "collection": "user",
  "route": true,
  "unicon": "user-circle",
  "presets": [
    "crud",
    "view"
  ],
  "individualActions": {
    "ui/spawnEdit": {
      "name": "Editar",
      "unicon": "edit",
      "userOnly": true
    },
    "route/dashboard-user-changepass": {
      "name": "Mudar senha",
      "unicon": "key-skeleton",
      "userOnly": true,
      "fetchItem": true
    },
    "delete": {
      "name": "remover",
      "unicon": "trash-alt",
      "userOnly": true,
      "ask": true
    }
  },
  "searchable": {
    "picture": "picture",
    "indexes": [
      "name",
      "phone",
      "email"
    ]
  },
  "fields": {
    "name": {
      "label": "Nome",
      "type": "text",
      "required": true
    },
    "active": {
      "label": "Ativo",
      "type": "boolean",
      "default": true
    },
    "first_name": {
      "label": "Nome",
      "type": "text",
      "notable": true,
      "noform": true
    },
    "access": {
      "label": "Preset de acesso",
      "type": "select",
      "values": {
        "__query": {
          "collection": "accessProfile",
          "index": "name"
        }
      },
      "required": true
    },
    "email": {
      "label": "Email",
      "type": "text",
      "unique": true,
      "required": true
    },
    "password": {
      "label": "Senha",
      "type": "password",
      "hidden": true,
      "noform": true,
      "notable": true
    },
    "phone": {
      "label": "Telefone",
      "type": "text",
      "mask": "(##) #####-####"
    },
    "picture": {
      "collection": "file",
      "label": "Foto de perfil",
      "index": "filename",
      "cellStyle": "(row) => '_id' in row.picture && `border rounded-full overflow-hidden`"
    },
    "group": {
      "label": "Grupo",
      "type": "text",
      "noform": true,
      "notable": true
    },
    "updated_at": {
      "label": "Atualizado em",
      "type": "datetime",
      "meta": true
    }
  }
}

