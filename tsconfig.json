{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "common/*": ["./packages/common/src/*"],
      "data/*": ["./packages/data/*"],
      "backend/*": ["./packages/backend/src/*"],
      "frontend/*": ["./packages/frontend/src/*"],
      "components/*": ["./packages/components/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "packages/backend/**/*.ts",
    "packages/frontend/**/*.ts",
    "packages/frontend/**/*.js",
    "packages/frontend/**/*.vue",
    "packages/common/**/*.ts"
  ],
  "exclude": [
    "packages/**/node_modules/*",
    "packages/components/*",
    "dist/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "target": "es2017x",
      "module": "commonjs"
    }
  }
}
