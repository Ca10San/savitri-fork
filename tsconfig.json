{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "paths": {
      "common/*": ["./packages/common/src/*"],
      "api/*": ["./packages/api/core/*"],
      "web/*": ["./packages/web/core/*"],
      "components/*": ["./packages/components/*"],
      "collections/*": ["./packages/collections/*"],
      "controllables/*": ["./packages/controllables/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "target": "es2017x",
      "module": "commonjs"
    }
  }
}
