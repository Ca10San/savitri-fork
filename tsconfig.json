{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "common/*": ["./packages/common/src/*"],
      "api/*": ["./packages/api/src/*"],
      "web/*": ["./packages/web/src/*"],
      "components/*": ["./packages/components/*"],
      "collections/*": ["./packages/collections/*"],
      "controllables/*": ["./packages/controllables/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "packages/api/**/*.ts",
    "packages/web/**/*.ts",
    "packages/common/**/*.ts",
    "packages/components/**/*.ts",
    "packages/collections/**/*.ts",
    "packages/controllables/**/*.ts"
  ],
  "exclude": [
    "packages/**/node_modules/*",
    "dist/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "target": "es2017x",
      "module": "commonjs"
    }
  }
}
